{
  "appId": "com.filespush.app",
  "productName": "文件推送工具",
  "directories": {
    "output": "release"
  },
  "files": [
    "build/**/*",
    "electron/**/*",
    "dist-electron/**/*",
    "package.json"
  ],
  "asar": true,
  "compression": "maximum",
  "asarUnpack": [
    "src/adb/**",
    "src/idb/**"
  ],
  "extraResources": [
    {
      "from": "src/adb",
      "to": "resources/adb",
      "filter": ["**/*"]
    },
    {
      "from": "src/idb",
      "to": "resources/idb",
      "filter": ["**/*"]
    }
  ],
  "extraMetadata": {
    "main": "electron/main-simple.js"
  },
  "electronVersion": "33.2.0",
  "win": {
    "target": "nsis",
    "executableName": "files-push"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
