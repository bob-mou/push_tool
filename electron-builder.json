{
  "appId": "com.filespush.app",
  "productName": "文件推送工具",


  "directories": {
    "output": "release-out"
  },
  "files": [
    "build/**/*",
    "electron/**/*",
    "dist-electron/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "electron/main-simple.js"
  },
  "electronVersion": "33.2.0",
  "win": {
    "target": "nsis",
    "icon": "build/icon.ico",
    "executableName": "files-push"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
